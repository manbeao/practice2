<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <comment/>
    <entry key="checkManagerId">
        SELECT
            A.MANAGER_NAME,
            A.MANAGER_ID
        FROM STORE_MANAGER A
        WHERE A.MANAGER_ID = ?
    </entry>
    <entry key="selectAllProductList">
        SELECT
            *
        FROM convenience_store
    </entry>
    <entry key="staffAllInformation">
        SELECT
                *
        FROM STAFF
    </entry>
    <entry key="myStaffList">
        SELECT
                A.STAFF_NAME,
                A.STAFF_ID
        FROM STAFF A
        WHERE A.MANAGER_NAME = ?
    </entry>

    <entry key="insertProduct">
        INSERT INTO convenience_store
        (
        PRODUCT_NAME,
        PRODUCT_PRICE,
        PRODUCT_CATEGORY,
        PRODUCT_STATUS
        )
        VALUES
        (
        ?,
        ?,
        ?,
        ?
        )
    </entry>

    <entry key="searchProduct">
        SELECT
            *
        FROM convenience_store
        WHERE PRODUCT_CODE = ?
    </entry>

    <entry key="changeProduct">
        UPDATE convenience_store
        SET PRODUCT_NAME = ?,
        PRODUCT_PRICE =?,
        PRODUCT_CATEGORY =?,
        PRODUCT_STATUS =?
        WHERE PRODUCT_CODE =?
    </entry>

    <entry key="deleteProduct">
    DELETE
    FROM convenience_store
    WHERE PRODUCT_NAME = ?
</entry>
</properties>