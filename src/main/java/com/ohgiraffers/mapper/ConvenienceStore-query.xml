<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <comment/>
    <entry key="checkManagerId">
        <!---->
        SELECT
            A.MANAGER_NAME,
            A.MANAGER_ID
        FROM STORE_MANAGER A
        WHERE A.MANAGER_ID = ?
    </entry>
    <entry key="selectAllProductList">
        SELECT
            *
        FROM convenience_store
    </entry>
    <entry key="staffAllInformation">
        SELECT
                *
        FROM STAFF
    </entry>
    <entry key="myStaffList">
        SELECT
                *
        FROM STAFF A
        WHERE A.MANAGER_NAME = ?
    </entry>

    <entry key="addStaff">
        INSERT INTO STAFF
        (
        STAFF_NAME,
        STAFF_PHONE,
        HIRE_DATE,
        WORK_STATUS,
        MANAGER_NAME
        )
        VALUES
        (
        ?,
        ?,
        ?,
        ?,
        ?
        )
    </entry>

    <entry key="changeStaff">
        UPDATE STAFF
        SET STAFF_NAME = ?,
        STAFF_PHONE =?,
        HIRE_DATE =?,
        WORK_STATUS =?,
        MANAGER_NAME =?
        WHERE STAFF_ID =?
    </entry>

    <entry key="searchStaff">
        SELECT
                *
        FROM STAFF
        WHERE STAFF_ID = ?
    </entry>

    <entry key="deleteStaff">
        DELETE
        FROM STAFF
        WHERE STAFF_ID = ?
    </entry>

    <entry key="insertProduct">
        INSERT INTO convenience_store
        (
        PRODUCT_NAME,
        PRODUCT_PRICE,
        PRODUCT_CATEGORY,
        PRODUCT_STATUS
        )
        VALUES
        (
        ?,
        ?,
        ?,
        ?
        )
    </entry>

    <entry key="searchProductCode">
        SELECT
            *
        FROM convenience_store
        WHERE PRODUCT_CODE = ?
    </entry>

    <entry key="searchProductName">
        SELECT
            *
        FROM convenience_store
        WHERE PRODUCT_NAME = ?
    </entry>

    <entry key="searchProductPrice">
        SELECT
            *
        FROM convenience_store
        WHERE PRODUCT_PRICE = ?
    </entry>

    <entry key="searchProductCategory">
        SELECT
            *
        FROM convenience_store
        WHERE PRODUCT_CATEGORY = ?
    </entry>

    <entry key="searchProductStatus">
        SELECT
        *
        FROM convenience_store
        WHERE PRODUCT_STATUS = ?
    </entry>

    <entry key="changeProduct">
        UPDATE convenience_store
        SET PRODUCT_NAME = ?,
        PRODUCT_PRICE =?,
        PRODUCT_CATEGORY =?,
        PRODUCT_STATUS =?
        WHERE PRODUCT_CODE =?
    </entry>

    <entry key="deleteProduct">
    DELETE
    FROM convenience_store
    WHERE PRODUCT_NAME = ?
</entry>
</properties>